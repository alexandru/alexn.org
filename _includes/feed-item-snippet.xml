{% capture post_css_id %}alexn_post_{{ include.post.id | to_css_id }}{% endcapture -%}
{% capture styles_scss %}
  #{{ post_css_id }} {
    .highlighter-rouge .highlight {
      background-color: #f0f0f0;
      color: #333;
      padding: 10px;
    }
    @import "modules/syntax";
  }
{% endcapture -%}
{% capture styles %}{{ styles_scss | scssify }}{% endcapture -%}
<item>
  <title>{% if include.prefix %}{{ include.prefix }}: {% endif %}{{ include.post.title | xml_escape }}</title>
  <description><![CDATA[          
    <style type="text/css">
      {{ styles }}
    </style>
    <article id="{{ post_css_id }}">{{ include.post.content | rss_process }}</article>
  ]]></description>
  <pubDate>{{ include.post.date | date_to_rfc822 }}</pubDate>
  <link>{{ include.post.url | prepend: site.baseurl | prepend: site.url | rss_campaign_link: 'rss-link' | xml_escape }}</link>
  <guid isPermaLink="true">{{ include.post.url | prepend: site.baseurl | prepend: site.url }}</guid>
  {% if include.post.author %}
  {% assign author = site.authors | map: include.post.author | map: "name" %}
  <dc:creator>{{ author }}</dc:creator>
  {% endif %}
  <category>snippet</category>
  {% for tag in include.post.tags %}
  <category>{{ tag | xml_escape }}</category>
  {% endfor %}
</item>
