{% assign campaign_name = include.campaign_name | default: "rss" -%}
{% capture description -%}
  {% if include.full_post %}
    {% if include.post.image %}{% unless include.post.image_hide_in_post %}
      <div class="post-featured-image">
      {% if include.post.youtube %}
        {% include youtube.html id=include.post.youtube image=include.post.image caption=include.post.image_caption figure_style="margin: 0;" img_style="display: block; max-width:100%; margin: 0 auto;"  %} 
      {% else %}
        <figure style="margin: 0;">
          <a href="{{ include.post.url | absolute_url | rss_campaign_link: 'image', campaign_name }}">
            <img src="{{ include.post.image | absolute_url }}?{{ 'now' | date: '%Y%m%d%H%M' }}" align="middle" style="display: block; max-width:100%; margin: 0 auto;" alt="" />
          </a>
          {% if include.post.image_caption %}<figcaption>{{ include.post.image_caption | xml_escape }}</figcaption>{% endif %}
        </figure>
      {% endif %}
      </div>
    {% endunless %}{% endif %}
    {{ include.post.content | rss_process }}
    <p>
      <i>The article <a href="{{ include.post.url | absolute_url | rss_campaign_link: 'footer-link', campaign_name }}">{{ include.post.title | xml_smart_escape }}</a> first appeared on <a href="{{ site.url | rss_campaign_link: 'footer-link', campaign_name }}">{{ site.domain }}</a>.</i>
    </p>
  {% elsif include.write_tags_as_content %}
    Blog article {% for tag in include.post.tags %}#{{ tag | twitter_taggify }} {% endfor %}
  {% else %}
    {% if include.post.image -%}
      <a href="{{ include.post.url | absolute_url | rss_campaign_link: 'image', campaign_name }}">
        <img src="{{ include.post.image | absolute_url }}?{{ 'now' | date: '%Y%m%d%H%M' }}" align="middle" style="display: block; max-width:100%; margin: 0 auto;"
          alt="{% if include.post.image_caption %}{{ include.post.image_caption | xml_escape }}{% endif %}" />
      </a>
      <br />
    {% elsif include.post.youtube -%}
      <a href="{{ include.post.url | absolute_url | rss_campaign_link: 'image', campaign_name }}">
        <img src="{{ include.post.youtube | youtube_thumb_link }}" align="middle" style="display: block; max-width:100%; margin: 0 auto;" 
          alt="YouTube thumbnail" />
      </a>
    {% endif -%}
    {% if include.post.description %}{{ include.post.description | markdownify | rss_process }}{% else %}{{ include.post.excerpt | strip_html | rss_process }}{% endif -%}
    <p>
      <a href="{{ include.post.url | absolute_url | rss_campaign_link: 'read-more', campaign_name }}">Read article â†’</a>
    </p>
  {% endif %}
{% endcapture -%}
<item>
  <title>{% if include.prefix %}{{ include.prefix }}{% endif %}{{ include.post.title | xml_smart_escape }}</title>
  <description>{{ description | strip | xml_escape }}</description>
  <pubDate>{{ include.post.date | date_to_rfc822 }}</pubDate>
  {% if include.post.last_modified_at -%}
  <dc:modified>{{ include.post.last_modified_at | date_to_rfc822 }}</dc:modified>
  <atom:modified>{{ include.post.last_modified_at | date_to_rfc822 }}</atom:modified>
  {% endif -%}
  <link>{{ include.post.url | prepend: site.baseurl | prepend: site.url | rss_campaign_link: "link", campaign_name | xml_escape }}</link>
  <guid isPermaLink="true">{{ include.post.url | prepend: site.baseurl | prepend: site.url }}</guid>
  {% if include.post.author %}
  {% assign author = site.authors | map: include.post.author | map: "name" %}
  <dc:creator>{{ author }}</dc:creator>
  {% endif %}
  <category>Blog</category>
  {% for tag in include.post.tags %}
  <category>{{ tag | xml_escape }}</category>
  {% endfor %}
</item>
