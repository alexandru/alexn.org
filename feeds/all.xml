---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:dc="http://purl.org/dc/elements/1.1/">

  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>Feed of blog articles, snippets, shared links, published at {{ site.domain }}{{ site.baseurl }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ site.feed }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
  	<language>en</language>
    <sy:updatePeriod>hourly</sy:updatePeriod>
	  <sy:updateFrequency>1</sy:updateFrequency>
    <generator>Jekyll v{{ jekyll.version }}</generator>

    {% assign everything = site.posts | concat: site.snippets | concat: site.links | concat: site.links | concat: site.wiki | rss_sort_all -%}
    {% for post in everything limit:200 %}
      {% unless post.link or post.secret -%}
        {% if post.nav_id == '/blog/' -%}
          {% include feed-item-blog.xml post=post first=forloop.first %}
        {% elsif post.nav_id == '/snippets/' -%}
          {% include feed-item-snippet.xml post=post prefix="Snippet" %}  
          {% elsif post.nav_id == '/links/' -%}
          {% include feed-item-link.xml post=post prefix="Shared Link" %}
        {% elsif post.nav_id == '/wiki/' -%}
          {% unless post.path == '_wiki/readme.md' %}          
            {% include feed-item-wiki.xml post=post prefix="Wiki" unique_id_per_path=true %}
          {% endunless %}
        {% endif -%}
      {% endunless -%}
    {% endfor -%}
  </channel>
</rss>
