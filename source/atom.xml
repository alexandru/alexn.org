---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
 <id>http://bionicspirit.com/</id>
 <title>{{ site.blog_title }}</title>
 <link href="{{ site.site_root_url }}/atom.xml" rel="self"/>
 <link href="{{ site.site_root_url }}/" />
 <updated>{{ site.time | date_to_xmlschema }}</updated>

 <author>
   <name>Alexandru Nedelcu</name>
   <email>contact@bionicspirit.com</email>
   <uri>{{ site.site_root_url }}</uri>
 </author>

 {% for post in site.posts %}
 {% unless post.is_draft or post.archive %}
 <entry>
   <id>http://bionicspirit.com{{ post.id }}</id>
   <title>{{ post.title }}</title>
   <link href="{{ site.site_root_url }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>

   <author>
     <name>Bionic Spirit</name>
     <email>contact@bionicspirit.com</email>
     <uri>{{ site.site_root_url }}</uri>
   </author>

   <rights type="text">
     Copyright {{ post.date | date:"%Y" }} Alexandru Nedelcu.
     Some rights reserved (CC BY-NC 3.0)
     License: http://creativecommons.org/licenses/by-nc/3.0/
   </rights>

   {% for tag in post.tags %}
   <category scheme="{{ site.site_root_url }}/tags/" term="{{ tag }}" label="{{ tag }}" />
   {% endfor %}

   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endunless %}
 {% endfor %}
</feed>
