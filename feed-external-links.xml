---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:dc="http://purl.org/dc/elements/1.1/">

  <channel>
    <title>{{ site.title | xml_escape }} - Recommended Articles</title>
    <description>Feed of recommended links from around the web.</description>
    <link>{{ site.url }}{{ site.baseurl }}/links/</link>
    <atom:link href="{{ site.feed_external_links }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
  	<language>en</language>
    <sy:updatePeriod>hourly</sy:updatePeriod>
	  <sy:updateFrequency>1</sy:updateFrequency>
    <generator>Jekyll v{{ jekyll.version }}</generator>

    {% assign links = site.links | sort: 'date' | reverse -%}
    {% for post in links %}
      {% unless post.secret %}
      <item>
        <title>{{ post.title | xml_escape }}{% if post.author %}, by {{ post.author }}{% endif %}</title>
        <description><![CDATA[          
          {{ post.content | rss_process }}
          <p>
            <a href="{{ post.link }}">Read article ...</a>
          </p>
        ]]></description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.link | xml_escape }}</link>
        <guid isPermaLink="false">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% if post.author %}
        <dc:creator>{{ post.author }}</dc:creator>
        {% endif %}
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
