---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:dc="http://purl.org/dc/elements/1.1/">

  <channel>
    <title>{{ site.title | xml_escape }} - Snippets</title>
    <description>Feed of snippets, published at {{ site.domain }}{{ site.baseurl }}/snippets/</description>
    <link>{{ site.url }}{{ site.baseurl }}/snippets/</link>
    <atom:link href="{{ site.feed_snippets }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
  	<language>en</language>
    <sy:updatePeriod>hourly</sy:updatePeriod>
	  <sy:updateFrequency>1</sy:updateFrequency>
    <generator>Jekyll v{{ jekyll.version }}</generator>

    {% assign snippets = site.snippets | sort: 'date' | reverse -%}
    {% for post in snippets %}
      {% unless post.secret %}
      {% capture post_css_id %}alexn_post_{{ post.id | to_css_id }}{% endcapture -%}
      {% capture styles_scss %}
        #{{ post_css_id }} {
          .highlighter-rouge .highlight {
            background-color: #f0f0f0;
            color: #333;
            padding: 10px;
          }
          @import "modules/syntax";
        }
      {% endcapture -%}
      {% capture styles %}{{ styles_scss | scssify }}{% endcapture -%}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description><![CDATA[          
          <style type="text/css">
            {{ styles }}
          </style>
          <article id="{{ post_css_id }}">{{ post.content | rss_process }}</article>
        ]]></description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url | rss_campaign_link: 'rss-link' | xml_escape }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% if post.author %}
        {% assign author = site.authors | map: post.author | map: "name" %}
        <dc:creator>{{ author }}</dc:creator>
        {% endif %}
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
